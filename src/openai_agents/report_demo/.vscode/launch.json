{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Run Demo",
            "type": "debugpy",
            "request": "launch",
            "module": "planner_report.run_demo",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Run Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/",
                "-v"
            ],
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}